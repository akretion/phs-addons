<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="act_res_partner_stock_orderpoint" model="ir.actions.act_window">
            <field name="name">Stock orderpoint</field>
            <field name="res_model">stock.warehouse.orderpoint</field>
            <field name="view_mode">tree</field>
            <field
            name="domain"
        >[('supplier_id.id','=', active_id), ('qty_to_order', '>', 0)]</field>
    </record>

    <record id="res_partner_view_stock_orderpoint_buttons" model="ir.ui.view">
        <field name="name">res.partner.view.stock.orderpoints.buttons</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    class="oe_stat_button"
                    name="%(phs_stock.act_res_partner_stock_orderpoint)d"
                    type="action"
                    icon="fa-list"
                >
                    <field
                        string="Stock Orderpoint"
                        name="stock_orderpoint"
                        widget="statinfo"
                    />
                </button>
            </div>
        </field>
    </record>

</odoo>
